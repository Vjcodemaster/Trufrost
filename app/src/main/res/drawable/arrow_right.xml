<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <solid android:color="@android:color/transparent"/>
            <size
                android:width="@dimen/drawable_arrow_width"
                android:height="@dimen/drawable_arrow_height"/>
        </shape>
    </item>

    <item android:bottom="@dimen/drawable_arrow_bottom">
        <rotate
            android:fromDegrees="-45"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="@android:color/white"/>
                <corners
                    android:bottomLeftRadius="0dp"
                    android:bottomRightRadius="0dp"
                    android:radius="@dimen/drawable_arrow_radius"/>
            </shape>
        </rotate>
    </item>

    <item android:top="@dimen/drawable_arrow_bottom">
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="@android:color/white"/>
                <corners
                    android:radius="@dimen/drawable_arrow_radius"
                    android:topLeftRadius="0dp"
                    android:topRightRadius="0dp"/>
            </shape>
        </rotate>
    </item>


</layer-list>